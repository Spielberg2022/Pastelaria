
@{
    ViewBag.Title = "CadastroUsuario2";
    Layout = null;
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jaquery/2.2.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .tela-cadastro {
            background-color: rgba(0,0,0,0.8);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 80px;
            border-radius: 15px;
            color: white;
        }

        input {
            padding: 6px;
            border: none;
            outline: none;
            font-size: 15px;
        }

        #Nome {
            width: 450px;
        }

        #Foto {
            width: 470px;
        }

        #telefone {
            width: 120px;
        }

        #celular {
            width: 120px;
        }

        #Cep {
            width: 100px;
        }

        #Logradouro {
            width: 300px;
        }

        #Bairro {
            width: 210px;
        }

        #Email {
            width: 240px;
        }

        #TipoUsuario {
            width: 100px;
            padding: 6px;
        }

        #Uf {
            width: 60px;
            padding: 6px;
        }

        #dataNascimento {
            width: 150px;
        }

        #btnInserir {
            background-color: dodgerblue;
            border: none;
            padding: 15px;
            width: 820px;
            border-radius: 10px;
            color: white;
            font-size: 15px;
            cursor: pointer;
        }

            #btnInserir:hover {
                background-color: deepskyblue;
            }
    </style>
</head>
<body>
    <div class="tela-cadastro">
        <h1>Cadastro de Usuários</h1>
        <br />
        <div>
            <label for="TipoUsuario">Tipo Usuário:</label>
            <select id="TipoUsuario">
                <option value="1">Gestor</option>
                <option value="2">Usuário</option>
            </select>
        </div>
        <br />
        <div>
            <label for="Email">E-mail:</label>
            <input id="Email" type="text" />
            <label for="Nome">Senha:</label>
            <input id="Senha" type="password" />
        </div>
        <br />
        <div>
            <label for="Nome">Nome:</label>
            <input id="Nome" type="text" />
            <label for="DataNascimento">Data de nascimento:</label>
            <input type="date" id="dataNascimento" name="dataNascimento">
        </div>
        <br />
        <div>
            <label for="Foto">Foto:</label>
            <input id="Foto" type="text" />
            <input id="btnInserirImagem" type="button" value="Inserir Imagem" />
        </div>
        <br />
        <div>
            <label for="telefone">Telefone fixo: </label>
            <input type="tel" id="telefoneFixo" name="telefoneFixo" placeholder="(99)9999-8888" pattern="([0-9]{2})[0-9]{4}-[0-9]{4}">
            <label for="telefone">Celular: </label>
            <input type="tel" id="telefoneCelular" name="telefoneCelular" placeholder="(99)99999-8888" pattern="([0-9]{2})[0-9]{5}-[0-9]{4}">
        </div>
        <br />
        <div>
            <label for="Cep">CEP:</label>
            <input id="Cep" type="text" placeholder="99.888-000" />
            <label for="Logradouro">Logradouro:</label>
            <input id="Logradouro" type="text" />
            <label for="Bairro">Bairro:</label>
            <input id="Bairro" type="text" />
        </div>
        <br />
        <div>
            <label for="Cidade">Cidade:</label>
            <input id="Cidade" type="text" />
            <label for="Uf">UF:</label>
            <select id="Uf">
                <option value="AC">AC</option>
                <option value="AL">AL</option>
                <option value="AP">AP</option>
                <option value="AM">AM</option>
                <option value="BA">BA</option>
                <option value="CE">CE</option>
                <option value="DF">DF</option>
                <option value="ES">ES</option>
                <option value="GO">GO</option>
                <option value="MA">MA</option>
                <option value="MT">MT</option>
                <option value="MS">MS</option>
                <option value="MG">MG</option>
                <option value="PA">PA</option>
                <option value="PB">PB</option>
                <option value="PR">PR</option>
                <option value="PE">PE</option>
                <option value="PI">PI</option>
                <option value="RJ">RJ</option>
                <option value="RN">RN</option>
                <option value="RS">RS</option>
                <option value="RO">RO</option>
                <option value="RS">RS</option>
                <option value="RC">RC</option>
                <option value="SP">SP</option>
                <option value="SE">SE</option>
                <option value="TO">TO</option>
            </select>
        </div>
        <br />
        <div>
            <button id="btnInserir">Inserir</button>
        </div>
    </div>
    <script>
        var url = {
            get: '@Url.Action("CriarUsuario", "Usuario")',
            getUsuario : ''
        };

        $("#btnInserir").click(function () {
            debugger;
            $.get(url.get,
                {
                    tipoUsuario: $("#TipoUsuario").val(),
                    email: $("#Email").val(),
                    senha: $("#Senha").val(),
                    nome: $("#Nome").val(),
                    dataNascimento: $("#DataNascimento").val(),
                    telefoneFixo: $("#TelefoneFixo").val(),
                    telefoneCelular: $("#TelefoneCelular").val(),
                    logradouro: $("#Logradouro").val(),
                    bairro: $("#Bairro").val(),
                    cidade: $("#Cidade").val(),
                    uf: $("#Uf").val(),
                    cep: $("#Cep").val(),
                    foto: $("#Foto").val()
                }, function (data) {
            });
        });
    </script>
</body>


