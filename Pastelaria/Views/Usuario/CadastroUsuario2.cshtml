
@{
    ViewBag.Title = "CadastroUsuario2";
    Layout = null;
}

<head>
    <style>
        div{
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        #Nome{
           width: 470px;
        }
        #telefone{
            width:120px;
        }
        #celular{
            width:120px;
        }
        #Cep{
            width:120px;
        }
        #Logradouro{
            width:340px;
        }
        #Email{
            width:240px;
        }
        #TipoUsuario{
            width: 100px;
        }
    </style>
</head>
<body>
    <h2>Cadastro de Usuarios</h2>
    <br />
    <div>
        <label for="TipoUsuario">Tipo Usuário</label>
        <select id="TipoUsuario">
            <option></option>

        </select>
    </div>
    <br />
    <div>
        <label for="Email">E-mail:</label>
        <input id="Email" type="text" />
        <label for="Nome">Senha:</label>
        <input id="Senha" type="password" />
    </div>
    <br />
    <div>
        <label for="Nome">Nome:</label>
        <input id="Nome" type="text" />
        <label for="DataNascimento">Data de nascimento:</label>
        <input type="date" id="dataNascimento" name="dataNascimento">
    </div>
    <br />
    <div>
        <label for="telefone">Telefone fixo: </label>
        <input type="tel" id="telefone" name="telefone" placeholder="(99)9999-8888" pattern="([0-9]{2})[0-9]{4}-[0-9]{4}">
        <label for="telefone">Celular: </label>
        <input type="tel" id="celular" name="celular" placeholder="(99)99999-8888" pattern="([0-9]{2})[0-9]{5}-[0-9]{4}">
    </div>
    <br />
    <div>
        <label for="Cep">CEP:</label>
        <input id="Cep" type="text" placeholder="99.888-000" />
        <label for="Logradouro">Logradouro:</label>
        <input id="Logradouro" type="text" />
        <label for="Bairro">Bairro:</label>
        <input id="Bairro" type="text" />
    </div>
    <br />
    <div>
        <label for="Cidade">Cidade:</label>
        <input id="Cidade" type="text" />
        <label for="Uf">UF</label>
        <select id="Uf">
            <option></option>

        </select>
    </div>
    
</body>


